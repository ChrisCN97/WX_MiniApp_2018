page {  
  display: block;  
  min-height: 100%;  
  background-color: #f8f6fb;  
}  


.title{
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: flex-start;
  align-items: flex-start;
  margin: 0;
  padding: 20rpx;
  height: 250rpx;
  border-bottom: 1px #eaeaed solid;
  background: #ffffff;
}

.post{
  width: 167rpx;
  height: 250rpx;
}

.word{
  display: flex;
  height: 250rpx;
  width: 410rpx;
  margin: 0 35rpx;
  flex-direction: column;
  justify-content: space-between;
  align-items: flex-start;
}

.location{
  display: flex;
  flex-direction: row;
  width: 400rpx;
  flex-wrap: nowrap;
}

.host{
  background: #ffffff;
  margin: 20rpx 0 0 0;
  padding: 17rpx 35rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: space-between;
  font-size: 36rpx;
  border-bottom: 1px #eaeaed solid;
  border-top: 1px #eaeaed solid;
}

.briefTitle{
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: space-between;
}

.context{
  font-size: 35rpx;
  font-weight: 380;
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 7;
}

.contextBag{
  background: #ffffff;
  margin: 20rpx 0 0 0;
  padding: 17rpx 35rpx;
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  justify-content: flex-start;
  font-size: 36rpx;
  border-bottom: 1px #eaeaed solid;
  border-top: 1px #eaeaed solid;
}

.border{
  border-top: 1px #eaeaed solid;
  margin: 20rpx 0 15rpx 0;
}

.switch{
  background: #ff8b8b;
  width: 100%;
  height: 96rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.icon{
  height: 50rpx;
  width: 50rpx;
  margin: 0 0 0 20rpx;
}