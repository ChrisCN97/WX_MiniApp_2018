/**app.wxss**/
.container{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}

.time{
  width: 100%;
  padding: 0rpx 32rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: space-between;
  font-size: 38rpx;
}

.avtivity{
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: flex-start;
  align-items: flex-start;
  margin: 20rpx 30rpx;
  height: 230rpx;
  background: #ffffff;
  box-shadow:3rpx 3rpx 6rpx 6rpx #ddd
}

.post{
  width: 153rpx;
  height: 230rpx;
}

.word{
  display: flex;
  height: 230rpx;
  width: 420rpx;
  margin: 0 25rpx;
  flex-direction: column;
  justify-content: space-between;
  align-items: flex-start;
}

.remark{
  display: flex;
  flex-direction: row;
  width: 300rpx;
  flex-wrap: nowrap;
  font-size: 30rpx;
}

.remark-border{
  border: 1.5px solid blue;
  border-radius: 10%;
  padding: 3rpx;
}

.line{
  height:3px;
  background: black;
  margin: 1rpx 0rpx;
}

.icon{
  height: 60rpx;
  width: 60rpx;
  margin-right: 10rpx;
  margin-top: 12%
}